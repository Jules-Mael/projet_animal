{% extends 'base.html.twig' %}

{% block title %}Les animaux !{% endblock %}

{% block body %}
    <h1>{{ animal.nom }}</h1>
    <div class="row">
        <div class="col-2">
            <img src="{{ animal.image }}">
        </div>
        <div class="col">
            <p>{{ animal.description }}</p>
            <p>{{ animal.poids }} Kg </p>
            <div>
                {% if animal.dangereux %}
                <span class="badge bg-danger"> Dangereux</span>
                {% else %}
                <span class="badge bg-success"> Safe </span>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}